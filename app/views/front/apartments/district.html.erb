<div class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="main-title__base">
        <div class="main-title--left">
          <div class="main-title__caption">
            <%= params[:province] %>のアパートを探す
          </div>
        </div>
        <div class="main--title-clearfix"></div>
      </div>

      <div class="district-map__base">
        <% unless @districts.nil? %>
            <% @districts.each do |district| %>
                <button class="district-map__item" onclick="location.href='<%= apartments_path(params[:province], district.original_id) %>'">
                  <%= district.name_ja %>
                  <span class="district-map__count"><%= "#{district.apartments.size}" %></span>
                </button>

            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>