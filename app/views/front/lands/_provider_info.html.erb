<section>
  <div class="section-title">
    <%= t('front.lands.provider_info.title') %>
  </div>
  <div class="provider-info">
    <div class="provider-info__title">
      <%= @land.provider.name unless @land.provider.nil? %>&nbsp;
      <span class="provider-info__label"><%= t('front.lands.provider_info.provider.certified') %></span>&nbsp;
      <a class="provider-info__url" href="#"><%= t('front.lands.provider_info.provider.link') %></a>
    </div>
    <table class="provider-info__table column2">
      <tbody>
      <tr>
        <th><%= t('front.lands.provider_info.provider.address') %></th>
        <td colspan="3"><%= @land.provider.address unless @land.provider.nil? %></td>
      </tr>
      <tr>
        <th><%= t('front.lands.provider_info.provider.working_time') %></th>
        <td><%= @land.provider.working_time unless @land.provider.nil? %></td>
        <th><%= t('front.lands.provider_info.provider.holidays') %></th>
        <td><%= @land.provider.holidays unless @land.provider.nil? %></td>
      </tr>
      </tbody>
    </table>

    <div class="provider-info__inquiry">
      <button class="provider-info__inquiry--btn" onclick="location.href='<%= land_inquiry_path(@land.id) %>'">
        <%= t('front.lands.provider_info.inquiry') %>
      </button>
    </div>
  </div>

</section>