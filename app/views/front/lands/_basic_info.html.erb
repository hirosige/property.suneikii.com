<div class="basic-info">
  <div class="title-base">
    <div class="kinds">
      <%= t('front.lands.title') %>
    </div>
    <div class="title">
      <%= @land.name %>
    </div>
  </div>
  <div class="description-body">
    <div class="description-left">
      <div class="line">
        <dl>
          <dt class="title"><%= t('front.lands.basic_info.rent_fee') %></dt>
          <dd class="price"><%= @land.delimited_rent_fee %></dd>
        </dl>
        <dl>
          <dt class="title"><%= t('front.lands.basic_info.security_deposit') %></dt>
          <dd><%= @land.delimited_security_deposit %></dd>
        </dl>
        <dl>
          <dt class="title"><%= t('front.lands.basic_info.deposit') %></dt>
          <dd><%= @land.delimited_deposit %></dd>
        </dl>
      </div>
      <div class="line">
        <dl>
          <dt class="title"><%= t('front.lands.basic_info.transportation') %></dt>
          <dd>
            <%= @land.transportation %><br>
            <!--<a href="#">通勤・通学駅までの経路・所要時間を調べる</a>-->
          </dd>
        </dl>

      </div>
      <div class="line">
        <dl>
          <dt class="title"><%= t('front.lands.basic_info.address') %></dt>
          <dd>
            <%= @land.address %><br>
            <!--<a href="#">地図をみる</a>-->
          </dd>
        </dl>

      </div>
      <div class="line">
        <dl>
          <dt class="title"><%= t('front.lands.basic_info.since_when') %></dt>
          <dd><%= @land.formatted_since_when %></dd>
          <dt class="title"><%= t('front.lands.basic_info.light_direction') %></dt>
          <dd><%= @land.light_direction %></dd>
          <dt class="title"><%= t('front.lands.basic_info.space') %></dt>
          <dd><%= @land.unit_space %></dd>
        </dl>
        <dl>
          <dt class="title"><%= t('front.lands.basic_info.balcony_space') %></dt>
          <dd><%= @land.balcony_space %></dd>
          <dt class="title"><%= t('front.lands.basic_info.room_type') %></dt>
          <dd><%= @land.room_type.name %></dd>
        </dl>
      </div>
      <div class="date-info">
        <%= t('front.lands.basic_info.created_at') %> : <time><%= @land.formatted_created_at %></time>
        <%= t('front.lands.basic_info.updated_at') %> : <time><%= @land.formatted_updated_at %></time>
      </div>
    </div>
    <div class="description-right">
      <div class="description-inquiry">
        <button class="btn-snk" onclick="location.href='<%= land_inquiry_path(@land.id) %>'">
          <i class="fa fa-phone-square"></i>
          <%= t('front.lands.inquiry') %>
        </button>
        <%= image_tag("snk_logo.jpg", :class => 'provider', :alt => 'logo') %>
      </div>
    </div>
    <div class="clearfix"></div>

  </div>
</div>