

<div class="container">
  <div class="sign-up-title__base">
    <div class="sign-up-title__caption">
      アカウント作成
    </div>
  </div>

  <div class="sign-up-main__base">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <fieldset class="form-group sign-up-main__item--width">
          <label for="email">Name</label>
          <%= f.text_field :name, :class => 'form-control' ,:placeholder => 'Enter Name', autofocus: true %>
        </fieldset>

        <fieldset class="form-group">
          <label for="email">Email address</label>
          <%= f.email_field :email, :class => 'form-control' ,:placeholder => 'Enter Email', autofocus: true %>
        </fieldset>

        <fieldset class="form-group">
          <label for="password">Password</label>
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, :class => 'form-control' ,:placeholder => 'Enter your Password', autofocus: true, autocomplete: "off" %>
        </fieldset>

        <fieldset class="form-group">
          <label for="password_confirmation">Password Confirmation</label>
          <%= f.password_field :password_confirmation, :class => 'form-control' ,:placeholder => 'Enter Password again', autofocus: true, autocomplete: "off" %>
        </fieldset>

        <% unless Role.all.size == 0 %>
          <fieldset class="form-group">
            <label for="ingredient">ユーザ権限</label>
            <%= f.collection_select :role_id, Role.all, :id, :name, {}, {:class => 'form-control'} %>
          </fieldset>
        <% end %>

        <div class="actions">
          <%= f.submit "Sign up", :class => 'sign-up-main__btn' %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>





